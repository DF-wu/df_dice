{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": "clang++",
            "args": [
                "main.cpp",
                "-std=c++11",
                "-g"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "reveal": "always"
            },
            "problemMatcher": "$msCompile"
        }
    ]
    /*

    "command": "clang++",
    "isShellCommand": true,
    "args": ["main.cpp", "-std=c++11", "-g"],
    "showOutput": "always"

    */
}